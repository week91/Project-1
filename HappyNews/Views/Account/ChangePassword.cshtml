@model HappyNews.ViewsModel.ChangePassViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-action="ChangePassword" asp-controller="Account" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" value="@Model.Id">
    </div>
    <div class="form-group">
        <label asp-for="OldPassword" class="col-form-label"></label>
        <input type="text" asp-for="OldPassword" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="col-form-label"></label>
        <input type="password" asp-for="NewPassword" class="form-control"/>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-default"/>
    </div>
</form>
@model List<News>
@{
    ViewData["Title"] = "Home Page";
}



    <div class="jumbotron">
    <div class="p-3 mb-2 bg-info text-white"> <div class="container">
        
        <h1 class="display-3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Welcome!</font></font></h1>
        <h3><p><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Fresh news. </font><font style="vertical-align: inherit;">Happy news of world!!!!! </font><font style="vertical-align: inherit;">Only happy ,only smile!!!</font></font></p></h3>
        </div>
    </div>

    <div class="container">
        <div class="row">
            @foreach (var news in Model)
            {
                 <div class="col-md-4">
                    <h2><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@news.NewsTitle</font></font></h2>
                    <p><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"><h4>@news.BodyNews</h4>
                        <p></font><font style="vertical-align: inherit;">@news.DateCreate </font><font style="vertical-align: inherit;">@news.Source "R"</font></font></p>
                    <p><a class="btn btn-secondary" href="#" role="button"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Посмотреть детали "</font></font></a></p>
                </div>
             }  
        </div>
    </div></div>



